{% extends 'FrontendBundle:Layout:frontend.html.twig' %}

{% block body %}

<style>

#confirm_command{
	color: #024d90;
}
#button_confirmed{
	float:right;
	margin-bottom: 20px;
}
th, td{
	text-align: center;
}
a:hover{	
	text-decoration:none;
}


</style>

<div class="row">
	<div id="confirm_command" class="col-lg-12">
	<h1 class="text-center"> Récapitulatif commande</h1>

		<table class="table table-bordered">

			<thead>
		        <tr>
		            <th>#</th>
		            <th>Quantité</th>
		            <th>Marque</th>
		            <th>Référence</th>
		            <th>Produit</th>
		            <th>Prix unité</th>
		        </tr>
		    </thead>

		    {% for  key, order_detail in globalOrder.orderDetails %}
		    <tbody>
		        <tr>            
		            <td>{{ key }}</td>        
		            <td>{{ order_detail.quantity }}</td>        
		            <td>{{ order_detail.product.brand }}</td>       
		            <td>{{ order_detail.product.ref }}</td>        
		            <td>{{ order_detail.product.lib }}</td>
		            <td>{{ order_detail.product.price }} €</td>		            
		        </tr>

		    </tbody>
		    {% endfor %}
		</table>

		<table class="table table-bordered">

		    <thead>
		        <tr>
		            <th>Prix total</th>
		    	</tr>
		    </thead>

		    <tbody>
		    	<tr>
		    		<td> " Total à calculé et a affiché "</td>
		    	</tr>
		    </tbody>

		</table>
	</div>

	<div class="col-lg-2" id="button_confirmed">
		<a href="{{ path('confirmed_order') }}"><button type="button" class="btn btn-success btn-block">
			Paiement
		</button></a>
	</div>
</div>


{% endblock %}