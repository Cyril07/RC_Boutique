{% extends 'FrontendBundle:Layout:frontend.html.twig' %}

{% block body %}

<style>

  #list_of_product{
    margin: 30px 0px;
  }
  #list_of_product a{
    text-decoration: none;
    font-size: 20px;    
  }
  #electronic_header h1{
    color: #2e75b5;
    text-decoration: underline;
    font-size: 35px;    
  }
  #electronic_header p{
    color: #333;
      
  }
  #list_of_product p{
    text-align: center;
    font-size: 18px;

  }
  a.btn.btn-primary{
    margin-left: 10px;
  }
  h3{
    height: 100px;
    text-align: center;
  }
  #electronic_header img{
    float:left;
    margin-right: 30px;
  }


</style>

  <div id="electronic_header" class="jumbotron">    
    
    <img src="{{ asset( 'pictures/motor_orion.png') }}" style="height: 150px"alt="...">
    <h1>Electroniques</h1>
    <p> Variateur, moteur, servo, l'electronique necessaire au fonctionnement de votre voiture se trouve ici ! </p>    

  </div>

  <div id="list_of_product"class="row">
  {% for product in products %}

    <div id="item_of_product" class="col-lg-3">
      <a href="{{ path('product_page', { 'slug': product.slug }) }}">
        <div class="thumbnail">
          <img src="{{ asset( 'uploads/pictures/'~product.picture ) }}" style="height: 150px"alt="...">
          <div class="caption">        
            <h3>{{ product.secondCategory.lib ~ " " ~ product.brand.lib ~ " " ~ product.lib }}</h3>        
            <p>{{ product.price }}â‚¬</p>
            <p><a href="#" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></a><a href="#" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-star" aria-hidden="true"></span></a></p>
          </div>
        </div>
      </a>    
    </div>

  {% endfor %}
  </div>

</div>

{% endblock %}