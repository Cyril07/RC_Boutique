{% extends 'BackendBundle:Layout:backend.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Ref</th>
                <td>{{ product.ref }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Lib</th>
                <td>{{ product.lib }}</td>
            </tr>
        </tbody>
    </table>

        <a href="{{ path('product_index') }}"><button type="button" class="btn btn-default"><b> Back to the list </b></button></a>

        <a href="{{ path('product_edit', { 'id': product.id }) }}"><button type="button" class="btn btn-default"><b> Edit </b></button></a>       

        {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-default"><b> Delete </b></button>
        {{ form_end(delete_form) }}

{% endblock %}