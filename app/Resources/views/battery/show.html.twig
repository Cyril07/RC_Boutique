{% extends 'BackendBundle:Layout:backend.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>Battery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ battery.id }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ battery.capacity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('battery_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('battery_edit', { 'id': battery.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
