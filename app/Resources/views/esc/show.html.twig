{% extends 'BackendBundle:Layout:backend.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>Esc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ esc.id }}</td>
            </tr>
            <tr>
                <th>Waterproof</th>
                <td>{% if esc.waterproof %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Sensored</th>
                <td>{% if esc.sensored %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Scale</th>
                <td>{{ esc.scale.lib }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ esc.power.lib }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('esc_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('esc_edit', { 'id': esc.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
