{% extends 'base.html.twig' %}

{% block body %}
    <h1>Scale</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scale.id }}</td>
            </tr>
            <tr>
                <th>Lib</th>
                <td>{{ scale.lib }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('scale_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('scale_edit', { 'id': scale.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
