{% extends 'BackendBundle:Layout:backend.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>Pieces list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Carname</th>
                <th>Scale</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td><a href="{{ path('piece_show', { 'id': piece.id }) }}">{{ piece.id }}</a></td>
                <td>{{ piece.carName }}</td>
                <td>{{ piece.scale.lib }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('piece_show', { 'id': piece.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('piece_edit', { 'id': piece.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('piece_new') }}">Create a new piece</a>
        </li>
    </ul>
{% endblock %}
