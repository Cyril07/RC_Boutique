{% extends 'base.html.twig' %}

{% block body %}
    <h1>Baskets list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for basket in baskets %}
            <tr>
                <td><a href="{{ path('basket_show', { 'id': basket.id }) }}">{{ basket.id }}</a></td>
                <td>{{ basket.quantity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('basket_show', { 'id': basket.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('basket_edit', { 'id': basket.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('basket_new') }}">Create a new basket</a>
        </li>
    </ul>
{% endblock %}
